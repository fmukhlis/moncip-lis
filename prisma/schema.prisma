generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  laboratoryId  String?
  id            String          @id @default(cuid(2))
  name          String?
  email         String?          @unique
  username      String?          @unique
  emailVerified DateTime?
  image         String?
  role          Role            @default(admin)
  password      String?
  laboratory    Laboratory?     @relation(fields: [laboratoryId], references: [id])
  accounts      Account[]
  sessions      Session[]
  // Optional for WebAuthn support
  Authenticator Authenticator[]
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  admin
  doctor
  lab_tech
}
 
model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([provider, providerAccountId])
}
 
model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
 
model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@id([identifier, token])
}
 
// Optional for WebAuthn support
model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([userId, credentialID])
}

model Laboratory {
  id                          String                        @id @default(cuid(2))

  // Relationships
  users                       User[]
  labTestGroups               LabTestGroup[]
  laboratoriesOnLabTests      LaboratoriesOnLabTests[]      

  // Timestamps
  createdAt                   DateTime                      @default(now())
  updatedAt                   DateTime                      @updatedAt
}

model LaboratoriesOnLabTests {
  id                      String                @id @default(cuid(2))
  notOrderableReason      String?

  // Relationships
  labTest                 LabTest               @relation(fields: [labTestId], references: [id])
  labTestId               String
  laboratory              Laboratory            @relation(fields: [laboratoryId], references: [id])
  laboratoryId            String
  defaultUnit             Unit?                 @relation("defaultUnit", fields: [defaultUnitId], references: [id])
  defaultUnitId           String?
  prices                  Price[]
  referenceRanges         ReferenceRange[]
  labTestGroups           LabTestGroup[]

  // Timestamps
  createdAt               DateTime              @default(now())
  updatedAt               DateTime              @updatedAt
  deletedAt               DateTime?

  @@unique([labTestId, laboratoryId])
}

model LabTestGroup {
  id                          String                        @id @default(cuid(2))
  code                        String                        
  name                        String
  description                 String?
  notOrderableReason          String?

  // Relationships
  laboratory                  Laboratory                    @relation(fields: [laboratoryId], references: [id])
  laboratoryId                String
  prices                      Price[]
  laboratoriesOnLabTests      LaboratoriesOnLabTests[]

  // Timestamps
  validFrom                   DateTime                      @default(now())
  validTo                     DateTime?
  createdAt                   DateTime                      @default(now())
  updatedAt                   DateTime                      @updatedAt
  deletedAt                   DateTime?
}

model ReferenceRange {
  id                            String                      @id @default(cuid(2))
  gender                        Gender
  ageMin                        Int
  ageMax                        Int
  valueLow                      Decimal?
  valueHigh                     Decimal?
  normalValues                  String[]                    @default([])

  // Relationships
  unit                          Unit?                       @relation(fields: [unitId], references: [id])
  unitId                        String?
  laboratoriesOnLabTests        LaboratoriesOnLabTests      @relation(fields: [laboratoriesOnLabTestsId], references: [id])
  laboratoriesOnLabTestsId      String
  
  // Timestamps
  validFrom                     DateTime                    @default(now())
  validTo                       DateTime?
  createdAt                     DateTime                    @default(now())
  updatedAt                     DateTime                    @updatedAt
}

enum Gender {
  M
  F
  B
}

model Price {
  id                            String                      @id @default(cuid(2))
  price                         Decimal   
  
  // Relationships
  tariffGroup                   TariffGroup                 @relation(fields: [tariffGroupId], references: [id])
  tariffGroupId                 String
  labTestGroup                  LabTestGroup?               @relation(fields: [labTestGroupId], references: [id])
  labTestGroupId                String?
  laboratoriesOnLabTests        LaboratoriesOnLabTests?     @relation(fields: [laboratoriesOnLabTestsId], references: [id])
  laboratoriesOnLabTestsId      String?

  // Timestamps
  validFrom                     DateTime                    @default(now())
  validTo                       DateTime?
  createdAt                     DateTime                    @default(now())
  updatedAt                     DateTime                    @updatedAt
  
  @@unique([labTestGroupId, tariffGroupId])
  @@unique([laboratoriesOnLabTestsId, tariffGroupId])
}

// -------------------------- Statically Generated Data -------------------------- //

model LabTest {
  id                          String                      @id @default(cuid(2))
  code                        String                      @unique
  name                        String
  possibleValues              String[]                    @default([])
  
  scale                       Scale                       @relation(fields: [scaleId], references: [id])
  scaleId                     String
  
  method                      Method?                     @relation(fields: [methodId], references: [id])
  methodId                    String?
  
  category                    Category                    @relation(fields: [categoryId], references: [id])
  categoryId                  String
  
  units                       Unit[]                      @relation("units")
  specimens                   Specimen[]          
  laboratoriesOnLabTests      LaboratoriesOnLabTests[]
}

model Specimen {
  id              String      @id @default(cuid(2))
  code            String      @unique
  name            String
  description     String?
  abbreviation    String

  labTests        LabTest[]   
}

model Category {
  id              String            @id @default(cuid(2))
  code            String            @unique
  name            String
  description     String?

  labTests        LabTest[]
}

model Method {
  id              String      @id @default(cuid(2))
  code            String      @unique
  name            String
  description     String?
  abbreviation    String      

  labTests        LabTest[]
}

model Unit {
  id                          String                        @id @default(cuid(2))
  code                        String                        @unique
  name                        String
  description                 String?
  displayCode                 String

  labTests                    LabTest[]                     @relation("units")
  conversionTo                UnitConversion[]              @relation("toUnit")
  referenceRanges             ReferenceRange[]    
  conversionsFrom             UnitConversion[]              @relation("fromUnit")
  laboratoriesOnLabTests      LaboratoriesOnLabTests[]      @relation("defaultUnit")
}

model Scale {
  id                String        @id @default(cuid(2))
  code              String        @unique
  name              String
  description       String?
  abbreviation      String

  labTests          LabTest[]   
}

model UnitConversion {
  id              String        @id @default(cuid(2))
  factor          Decimal
  offset          Decimal?    
  
  fromUnit        Unit          @relation("fromUnit", fields: [fromUnitId], references: [id])
  fromUnitId      String
  
  toUnit          Unit          @relation("toUnit", fields: [toUnitId], references: [id])
  toUnitId        String

  @@unique([fromUnitId, toUnitId])
}

model TariffGroup {
  id              String      @id @default(cuid(2))
  code            String      @unique
  name            String
  description     String?

  prices          Price[]
}

